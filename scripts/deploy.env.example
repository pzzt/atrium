# Esempio configurazione deploy per Raspberry Pi
# Copia questo file in deploy.env e modifica i valori

# Utente SSH sul Raspberry Pi (default: pi)
PI_USER=pi

# Hostname o IP del Raspberry Pi
PI_HOST=192.168.1.100

# Porta SSH (default: 22)
PI_PORT=22

# Percorso chiave SSH privata (opzionale)
# Se non specificato, usa autenticazione password/key standard
PI_DEPLOY_KEY=~/.ssh/id_rsa

# Nome immagine Docker
IMAGE_NAME=proxy-homepage

# Tag immagine
IMAGE_TAG=latest
